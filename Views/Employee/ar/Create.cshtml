@model HrSystem.Models.EmployeeViewModel


@{
    Layout = "~/Views/Shared/_Layout_ar.cshtml";
    ViewData["Title"] = "Create"; }

<h2>واجهة اضافة موظف</h2>

<h4>أضافة جديد</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            @if (ViewBag.Message != null)
            {
<h5 class="alert alert-danger">@ViewBag.Message</h5>            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name_En" class="control-label"></label>
                <input asp-for="Name_En" class="form-control" />
                <span asp-validation-for="Name_En" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name_Ar" class="control-label"></label>
                <input asp-for="Name_Ar" class="form-control" />
                <span asp-validation-for="Name_Ar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">الرجوع الى الخلف</a>
</div>

